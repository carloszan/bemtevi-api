generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  bio           String?
  name          String
  theme         Theme?
  accent        Accent?
  website       String?
  location      String?
  username      String    @unique
  photoURL      String
  verified      Boolean   @default(false)
  following     String[]
  followers     String[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime?
  totalTweets   Int       @default(0)
  totalPhotos   Int       @default(0)
  pinnedTweet   String?
  coverPhotoURL String?

  @@map("users")
}

enum Theme {
  light
  dim
  dark
}

enum Accent {
  blue
  yellow
  pink
  purple
  orange
  green
}
